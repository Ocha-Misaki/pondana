.flex.justify-center
  .card.bg-base-100.shadow-xl.w-full.max-w-lg.h-full
    .card-body
      %h2 Sign up
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'flex flex-col gap-4'}) do |f|
        = f.error_notification
        .form-inputs
          = f.input :email,
            required: true,
            autofocus: true,
            input_html: { autocomplete: "email" }
          = f.input :password,
            required: true,
            hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
            input_html: { autocomplete: "new-password" }
          = f.input :password_confirmation,
            required: true,
            input_html: { autocomplete: "new-password" }
        .form-actions
          = f.button :submit
      = render "users/shared/links"
