.flex.justify-center
  .card.bg-base-100.shadow-xl.w-full.max-w-lg.h-full
    .card-body
      %h2 パスワードのリセット
      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'flex flex-col gap-4' }) do |f|
        = f.error_notification
        .form-inputs
          = f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }
        .form-actions
          = f.button :submit
      = render "users/shared/links"
